<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Video Game Store - Browse</title>

    <!-- Bootstrap core CSS -->
    <!-- <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script> <link rel="stylesheet" href="node_modules/sweetalert/dist/sweetalert.css">

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-inverse bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="#">Welcome, <%= username %></a>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav nav ml-auto navbar-right">
            <li class="nav-item">
              <a class="nav-link" href="/">Home
              </a>
            </li>
            <%if (username != 'Guest' && username != 'Admin') {%>
            <li class="nav-item">
              <a class="nav-link" href="/account">Account
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">Cart
              </a>
            </li>
            <%}%>
            <li class="nav-item active">
              <a class="nav-link" onclick="" href="/browse?no=0&platform=-1">Browse</a>
              <span class="sr-only">(current)</span>
            </li>
            <%if (username == 'Guest' || username == 'Admin') {%>
            <li class="nav-item">
              <a class="nav-link" href="/registration">Login/Register</a>
            </li>
            <%}%>
            <%if (username != 'Guest') {%>
            <li class="nav-item">
              <a class="nav-link" href="" id="logout-button">Logout</a>
            </li>
            <%}%>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
      <div class="row">

        <div class="col-lg-3">

          <h1 class="my-4">Video Game Store</h1>
          <div class="list-group">
            <a href="/browse?no=0&platform=-1" class="list-group-item">All</a>
            <a href="/browse?no=0&platform=0" class="list-group-item">PC</a>
            <a href="/browse?no=0&platform=1" class="list-group-item">PS4</a>
            <a href="/browse?no=0&platform=2" class="list-group-item">Xbox One</a>
          </div>

        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">
          <div align='center' style="margin-bottom: 30px;">
            <br>
          </div>
          <!-- <div class="col-lg-12"> -->
            <%for (var i = 0; i < products.length; i++) { %>
              <div class="col-lg-4" align="center" style="margin-bottom:10px;margin-top:10px">
                <div class="card">
                  <img class="card-img-top" src="<%= products[i].imgpath %>" alt="" width="150" height="180">
                  <div class="card-body">
                    <h4 class="card-title"><%= products[i].name %></h4>
                    <a href="product/<%= products[i].idproduct %>" class="btn btn-primary">More Details</a>
                  </div>
                </div>
              </div>
            <% } %>
          <!-- </div> -->
        </div>


        <!-- /.col-lg-9 -->

      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <br>
    <div class="" align="center">
      <ul class="pagination pagination-lg">
        <%if (pageNo != 0) {%>
          <li><a href="browse?no=<%=pageNo-1%>&platform=<%=platform%>">Previous</a></li>
        <%}%>
        <%for (var i = 0; i < pages; i++) {%>
          <%if (pageNo == i) {%>
            <li class="active"><a href="browse?no=<%=i%>&platform=<%=platform%>"><%=i+1%></a></li>
          <%} else {%>
            <li><a href="browse?no=<%=i%>&platform=<%=platform%>"><%=i+1%></a></li>
          <%}%>
        <%}%>
        <%if (pageNo != pages - 1) {%>
          <li><a href="browse?no=<%=pageNo+1%>&platform=<%=platform%>">Next</a></li>
        <%}%>
      </ul>
    </div>


    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
