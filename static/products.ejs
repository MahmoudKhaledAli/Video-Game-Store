<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Video Game Store - Products List</title>

    <!-- Bootstrap core CSS -->

    <!-- <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Custom styles for this template -->
    <!-- <link href="css/shop-homepage.css" rel="stylesheet"> -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="assets/js/user.js"></script>
    <script type="text/javascript" src="assets/js/products.js"></script>
    <script src="/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="/css/users-list.css">
    <style media="screen">
          input[type=text] {
      width: 130px;
      box-sizing: border-box;
      border: 2px solid #ccc;
      border-radius: 4px;
      font-size: 16px;
      background-color: white;
      background-position: 10px 10px;
      background-repeat: no-repeat;
      padding: 12px 20px 12px 20px;
      -webkit-transition: width 0.4s ease-in-out;
      transition: width 0.4s ease-in-out;
      }

      input[type=text]:focus {
      width: 100%;
      }
    </style>



  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-inverse fixed-top">
      <div class="container">
        <a class="navbar-brand" href="">Welcome, Admin</a>
        <div class="" id="navbarResponsive">
          <ul class="navbar-nav nav ml-auto navbar-right">
            <li class="nav-item">
              <a class="nav-link" href="/">Home
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" onclick="" href="/browse?no=0&platform=-1&name=&field=product.idproduct&order=desc">Browse</a>
            </li>
              <li>
              <a class="nav-link" href="" id="logout-button">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->

    <hr>
<div class="container bootstrap snippet">
  <!-- <input type="text" name="search" placeholder="Search.."> -->
    <div class="row">
        <div class="col-lg-12">
          <form class="" action="products" method="get">
            <input type="text" name="name" placeholder="Search..">
          </form>
        </br>
      </br>
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>ID</span></th>
                                <th><span style="width:200%;padding-left:190px;margin-left:-190px;">Name</span></th>
                                <th><span>Platform</span></th>
                                <th><span style="padding-right:-100px">Sales</span></th>
                                <th style="width: 15%;padding-left:120px"><span>Price</span></th>
                                <th style="width: 15%;padding-left:120px"><span>Stock</span></th>
                                <th style="width: 15%;padding-left:120px"><span>Sale</span></th>
                                <th style="width:0%;padding-left:-50px">&nbsp;</th>
                                <th style="width:0%;padding-left:-50px">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                              <%for (var i = 0; i < products.length; i++) {%>
                                <tr id="row<%=products[i].idproduct%>">
                                  <td>
                                    <%=products[i].idproduct%>
                                  </td>
                                    <td style="width:200%"><%=products[i].name%></td>
                                    <td>
                                      <% if (products[i].platform == 0) {%>PC<%}%>
                                      <% if (products[i].platform == 1) {%>PS4<%}%>
                                      <% if (products[i].platform == 2) {%>Xbox One<%}%>
                                    </td>
                                    <td style="padding-left:10px"><%=products[i].sales%></td>
                                    <form class="form-group updateo" id="<%=products[i].idproduct%>">
                                      <td>
                                        <input style="width: 70%;margin-left:100px" class="form-control" type="text" name="price" value="<%=products[i].price%>">
                                      </td>
                                      <td>
                                        <input style="width: 70%;margin-left:100px" class="form-control" type="number" name="stock" value="<%=products[i].stock%>">
                                      </td>
                                      <td>
                                        <input style="width: 70%;margin-left:100px" class="form-control" type="text" name="sale" value="<%=products[i].sale%>">
                                      </td>
                                      <td>
                                        <td style="width: 20%;">
                                            <input type="submit" action="" method="get" style="margin-left:40px" class="btn btn-primary btn-md" value="Update Product">
                                        </td>
                                      </td>
                                    </form>
                                    <td>
                                      <button id="delete<%=products[i].idproduct%>" style="margin-left:10px" type="button" class="btn btn-danger btn-md delete">Delete Product</button>
                                    </td>
                                </tr>
                                <%}%>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    </br>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Your Website 2017</p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

</html>
